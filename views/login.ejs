<!DOCTYPE html>
<head>
  <%- include('header'); %>
  <title>ToDone | Login</title>
  <script type="text/javascript" src="javascripts/login.js"></script>
</head>
<body onload="setup();">
  <div class="container">
    <div class="container-fluid">
      <div class="row">
        <h1 class="text-center">LOGIN</h1>
      </div>
      <div class="row">
        <form id="login_form" class="col-xs-12 col-md-4 col-md-offset-4" onSubmit="login();">
          <p id="login_error" class="hidden">INVALID USERNAME/PASSWORD!</p>
          <div class="form-group">
            <label for="inputUsername" class="grey-text">USERNAME</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="grey-text">PASSWORD</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
          </div>
          <button type="submit" class="btn button-default col-xs-12"><b>GO</b></button>
        </form>
      </div>
    </div>
  </div>
  <%- include('footer'); %>
</body>
